<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Bocadillo de Personajes -->
    <RelativeLayout
        android:id="@+id/bocadillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bocadillo_fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Texto del bocadillo  -->
        <TextView
            android:id="@+id/textoBocadillo"
            style="@style/Bocadillo"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txt_guia_icono" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/marcadorTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/marcador_tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Icono de informaciÃ³n -->
        <ImageView
            android:id="@+id/iconoInfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/descripcion_icono_info"
            android:src="@android:drawable/ic_menu_info_details"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



