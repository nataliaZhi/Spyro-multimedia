<resources>

    <!-- Estilo para el botón "Saltar Guía" -->
    <style name="SaltarGuia" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para el botón "Siguiente" -->
    <style name="Siguiente" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:padding">12dp</item>
    </style>


    <!-- Estilo para el texto del bocadillo -->
    <style name="Bocadillo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Estilo para el título principal -->
    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>


    <!-- Estilo para textos normales -->
    <style name="Body">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>